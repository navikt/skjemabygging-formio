{
  "name": "@navikt/skjemabryggeriet",
  "version": "1.0.0",
  "private": true,
  "description": "Repository for skjemabygger og skjemautfyller",
  "repository": {
    "type": "git",
    "url": "https://github.com/navikt/skjemabygging-formio.git"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "workspaces": {
    "packages": [
      "packages/shared-domain",
      "packages/shared-components",
      "packages/*"
    ],
    "nohoist": [
      "**/bygger-backend/**",
      "**/fyllut-backend/**"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "start": "concurrently --kill-others-on-fail \"yarn:start:bygger:*\" \"yarn:start:fyllut:*\"",
    "start:bygger": "concurrently --kill-others-on-fail \"yarn:start:bygger:*\"",
    "start:bygger:frontend": "yarn workspace @navikt/bygger start",
    "start:bygger:backend": "yarn workspace @navikt/bygger-backend start",
    "start:fyllut": "concurrently --kill-others-on-fail \"yarn:start:fyllut:*\"",
    "start:fyllut:frontend": "yarn workspace @navikt/fyllut-frontend start",
    "start:fyllut:backend": "yarn workspace @navikt/fyllut-backend start",
    "test": "concurrently \"yarn:test:*\"",
    "test:bygger:frontend": "yarn workspace @navikt/bygger test",
    "test:bygger:backend": "yarn workspace @navikt/bygger-backend test",
    "test:fyllut:frontend": "yarn workspace @navikt/fyllut-frontend test",
    "test:fyllut:backend": "yarn workspace @navikt/fyllut-backend test",
    "test:fyllut:shared-domain": "yarn workspace @navikt/skjemadigitalisering-shared-domain test",
    "test:fyllut:shared-components": "yarn workspace @navikt/skjemadigitalisering-shared-components test",
    "cypress": "concurrently \"yarn:cypress:*\"",
    "cypress:bygger": "yarn workspace @navikt/bygger cypress",
    "cypress:fyllut": "yarn workspace @navikt/fyllut-frontend cypress",
    "check-types": "concurrently \"yarn:check-types:*\"",
    "check-types:bygger:frontend": "yarn workspace @navikt/bygger check-types",
    "check-types:bygger:backend": "yarn workspace @navikt/bygger-backend check-types",
    "check-types:fyllut:frontend": "yarn workspace @navikt/fyllut-frontend check-types",
    "check-types:fyllut:backend": "yarn workspace @navikt/fyllut-backend check-types",
    "check-types:fyllut:shared-domain": "yarn workspace @navikt/skjemadigitalisering-shared-domain check-types",
    "check-types:fyllut:shared-components": "yarn workspace @navikt/skjemadigitalisering-shared-components check-types",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs",
    "lint:staged": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitest/coverage-v8": "^0.34.1",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.11.0",
    "eslint-plugin-vitest": "^0.2.8",
    "eslint-plugin-vitest-globals": "^1.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vitest": "^0.34.1"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ]
  }
}
