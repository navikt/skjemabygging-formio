FROM node:14.17.0-alpine
ENV NODE_ENV production
ARG git_sha

WORKDIR /app
COPY build build
COPY server/dist server
COPY server/fonts server/fonts
COPY server/node_modules server/node_modules

ENV GIT_SHA=${git_sha}
ENV MONOREPO_GIT_SHA=${git_sha}

WORKDIR server
CMD ["node", "server.js"]

EXPOSE 8080
