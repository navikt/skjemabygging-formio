<div class="row">
  <div class="col col-sm-6">
    <p class="lead">{{ctx.t(ctx.componentInfo.title, { _userInput: true })}} {{ctx.t('komponent')}}</p>
  </div>
</div>
<div class="row">
  {% if (ctx.instance.navFormDiff) { %}
  <div class="col col-sm-12">
      <div class="aksel-alert aksel-alert--warning mb-4">
          <div>
              {{ctx.util.navFormDiffToHtml(ctx.instance.navFormDiff)}}
          </div>
      </div>
  </div>
  {% } %}
  {% if (ctx.instance.conditionalAlert) { %}
  <div class="col col-sm-12">
    <div class="aksel-alert aksel-alert--warning mb-4">
      <div>
        <span id="conditional-alert-heading">{{ctx.instance.conditionalAlert.message}}</span>
        <ul aria-labelledby="conditional-alert-heading">
          {{ctx.instance.conditionalAlert.components.map(c => `<li>${c.label} (${c.key})</li>`).join("")}}
        </ul>
      </div>
    </div>
  </div>
  {% } %}
  <div class="col col-sm-12">
    <div ref="editForm">
      {{ctx.editForm}}
    </div>
    {% if (ctx.componentInfo.help) { %}
    <div class="card card-body bg-light formio-settings-help">
      {{ ctx.t(ctx.componentInfo.help) }}
    </div>
    {% } %}
    <div style="margin-top: 10px; margin-bottom: 20px;">
      <button class="aksel-button aksel-button--primary" style="margin-right: 10px;" type="button" data-variant="primary" ref="saveButton">
        <span aria-live="polite" class="aksel-label" data-testid="editorSaveButton">{{ctx.t('Ok')}}</span>
      </button>
      <button class="aksel-button aksel-button--secondary" style="margin-right: 10px;" type="button" data-variant="secondary" ref="cancelButton">
        <span aria-live="polite" class="aksel-label" data-testid="editorCancelButton">{{ctx.t('Avbryt')}}</span>
      </button>
      <button class="aksel-button aksel-button--danger" type="button" data-variant="primary" data-color="danger" ref="removeButton">
        <span aria-live="polite" class="aksel-label" data-testid="editorRemoveButton">{{ctx.t('Slett')}}</span>
      </button>
    </div>
  </div>
  {% if (ctx.preview) { %}
  <div class="col col-sm-12">
    <div class="card preview-panel">
      <div class="card-header">
        <h4 class="card-title">{{ctx.t('Forh√•ndsvisning')}}</h4>
      </div>
      <div class="card-body">
        <div class="component-preview" ref="preview">
          {{ctx.preview}}
        </div>
      </div>
    </div>
  </div>
  {% } %}
</div>

