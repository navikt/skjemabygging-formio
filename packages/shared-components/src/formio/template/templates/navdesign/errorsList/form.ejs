<h2 class="navds-error-summary__heading navds-heading navds-heading--small" autofocus tabindex="-1" ref="errorRefHeader">
  {{ctx.t('error')}}
  {% if (ctx.options.vpat) { %}
  <span ref="errorTooltip" class="{{ctx.iconClass('question-sign')}}" tabindex="0"></span>
  {% } %}
</h2>
<ul>
  {% ctx.errors.forEach(function(err, i) { %}
  <li>
    <span
      data-component-key="{{err.keyOrPath}}"
      ref="errorRef"
      class="navds-link"
      tabIndex="0"
      role="link"
      onclick="document.getElementById('{{ err.keyOrPath }}')?.scrollIntoView(true);"
    >
      {{err.message}}
    </span>
  </li>
  {% }) %}
</ul>
