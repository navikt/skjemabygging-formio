{% if (ctx.component.description && ctx.component.descriptionPosition === "above") { %}
  <div class="description" id="d-{{ctx.instance.id}}-{{ctx.component.key}}">{{ctx.t(ctx.component.description)}}</div>
{% } %}
<fieldset
    {% if (ctx.component.description) { %}
    aria-describedby="d-{{ctx.instance.id}}-{{ctx.component.key}}"
    {% } %}
>
    {% if (ctx.component.legend) { %}
    <span class="label-track-changes">
      <legend ref="header" class="navds-fieldset__legend-formio-template" id="l-{{ctx.instance.id}}-{{ctx.component.key}}">
        {{ctx.t(ctx.component.legend)}}
      </legend>
      {{ctx.util.getBuilderTags(ctx)}}
    </span>
    {% } %}
    {% if (ctx.component.description && ctx.component.descriptionPosition !== "above") { %}
    <div class="description" id="d-{{ctx.instance.id}}-{{ctx.component.key}}">{{ctx.t(ctx.component.description)}}</div>
    {% } %}
    <div class="navds-fieldset__content{{ ctx.component.backgroundColor !== false ? ' navds-fieldset__content--background-color' : ''  }}" ref="{{ctx.nestedKey}}">
        {{ctx.children}}
    </div>
</fieldset>
