<div class="row">
  <div class="col col-sm-6">
    <p class="lead">{{ctx.t(ctx.componentInfo.title)}} {{ctx.t('Component')}}</p>
  </div>
  <div class="col col-sm-6">
    <div class="float-right" style="margin-right: 20px; margin-top: 10px">
      <a href="{{ctx.t(ctx.componentInfo.documentation)}}" target="_blank">
        <i class="{{ctx.iconClass('new-window')}}"></i> {{ctx.t('Help')}}
      </a>
    </div>
  </div>
</div>
<div class="row">
  <div class="col col-sm-12">
    <div ref="editForm">
        {{ctx.editForm}}
    </div>
    {% if (ctx.componentInfo.help) { %}
    <div class="card card-body bg-light formio-settings-help">
      {{ ctx.t(ctx.componentInfo.help) }}
    </div>
    {% } %}
    <div style="margin-top: 10px; margin-bottom: 20px;">
      <button class="knapp knapp--hoved" style="margin-right: 10px;" type="button" ref="saveButton">{{ctx.t('Save')}}</button>
      <button class="knapp" style="margin-right: 10px;" type="button" ref="cancelButton">{{ctx.t('Cancel')}}</button>
      <button class="knapp knapp--fare" type="button" ref="removeButton">{{ctx.t('Remove')}}</button>
    </div>
  </div>
  {% if (ctx.preview) { %}
  <div class="col col-sm-12">
    <div class="card preview-panel">
      <div class="card-header">
        <h4 class="card-title mb-0">{{ctx.t('Preview')}}</h4>
      </div>
      <div class="card-body">
        <div class="component-preview" ref="preview">
          {{ctx.preview}}
        </div>
      </div>
    </div>
  </div>
  {% } %}
</div>
