<div class="row">
  <div class="col col-sm-6">
    <p class="lead">{{ctx.t(ctx.componentInfo.title, { _userInput: true })}} {{ctx.t('Component')}}</p>
  </div>
  {% if (ctx.helplinks) { %}
  <div class="col col-sm-6">
    <div class="float-right" style="margin-right: 20px; margin-top: 10px">
      <a href="{{ctx.t(ctx.helplinks + ctx.componentInfo.documentation)}}" target="_blank">
        <i class="{{ctx.iconClass('new-window')}}"></i> {{ctx.t('Help')}}
      </a>
    </div>
  </div>
  {% } %}
</div>
<div class="row">
  {% if (ctx.instance.navFormDiff) { %}
  <div class="col col-sm-12">
      <div class="navds-alert navds-alert--warning mb-4">
          <div>
              {{ctx.util.navFormDiffToHtml(ctx.instance.navFormDiff)}}
          </div>
      </div>
  </div>
  {% } %}
  {% if (ctx.instance.conditionalAlert) { %}
  <div class="col col-sm-12">
    <div class="navds-alert navds-alert--warning mb-4">
      <div>
        <span id="conditional-alert-heading">{{ctx.instance.conditionalAlert.message}}</span>
        <ul aria-labelledby="conditional-alert-heading">
          {{ctx.instance.conditionalAlert.components.map(c => `<li>${c.label} (${c.key})</li>`).join("")}}
        </ul>
      </div>
    </div>
  </div>
  {% } %}
  <div class="col col-sm-12">
    <div ref="editForm">
      {{ctx.editForm}}
    </div>
    {% if (ctx.componentInfo.help) { %}
    <div class="card card-body bg-light formio-settings-help">
      {{ ctx.t(ctx.componentInfo.help) }}
    </div>
    {% } %}
    <div style="margin-top: 10px; margin-bottom: 20px;">
      <button class="navds-button navds-button--primary" style="margin-right: 10px;" type="button" ref="saveButton">
        <span aria-live="polite" class="navds-label">{{ctx.t('Save')}}</span>
      </button>
      <button class="navds-button navds-button--secondary" style="margin-right: 10px;" type="button" ref="cancelButton">
        <span aria-live="polite" class="navds-label">{{ctx.t('Cancel')}}</span>
      </button>
      <button class="navds-button navds-button--danger" type="button" ref="removeButton">
        <span aria-live="polite" class="navds-label">{{ctx.t('Remove')}}</span>
      </button>
    </div>
  </div>
  {% if (ctx.preview) { %}
  <div class="col col-sm-12">
    <div class="card preview-panel">
      <div class="card-header">
        <h4 class="card-title">{{ctx.t('Preview')}}</h4>
      </div>
      <div class="card-body">
        <div class="component-preview" ref="preview">
          {{ctx.preview}}
        </div>
      </div>
    </div>
  </div>
  {% } %}
</div>
