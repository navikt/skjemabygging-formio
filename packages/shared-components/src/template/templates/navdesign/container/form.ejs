{% if (!ctx.builder && ctx.component.hideLabel || !ctx.component.label) { %}
<div ref="{{ctx.nestedKey}}">
  {{ctx.children}}
</div>
{% } else { %}
<fieldset class="navds-fieldset">
  <div class="label-track-changes">
    <legend class="navds-body-short font-bold" id="l-{{ctx.instance.id}}-{{ctx.component.key}}">
      {{ctx.t(ctx.component.label)}}
    </legend>
    {{ctx.util.getDiffTag(ctx)}}
  </div>
  <div ref="{{ctx.nestedKey}}">{{ctx.children}}</div>
</fieldset>
{% } %}
