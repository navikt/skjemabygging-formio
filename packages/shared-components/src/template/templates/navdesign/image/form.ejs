{% if (ctx.component.image && ctx.component.image.length > 0) { %}
<img class="{{ctx.component.className }}" ref="html" src="{{ctx.component.image[0].url}}" alt="{{ctx.component.altText}}" width="{{ctx.instance.handleWidth(ctx.component.size)}}" />
<div class="img-description" id="{{ctx.component.id}}-{{ctx.component.key}}-description">{{ctx.t(ctx.component.description)}}</div>
{% } %}