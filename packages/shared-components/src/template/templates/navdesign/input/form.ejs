{% if (ctx.component.prefix || ctx.component.suffix) { %}
<div class="input-group">
{% } %}

{% if (ctx.component.prefix) { %}
<div class="input-group-prepend" ref="prefix">
  <span class="input-group-text navds-body-short">
    {{ctx.t(ctx.component.prefix)}}
  </span>
</div>
{% } %}
{% if (!ctx.component.editor && !ctx.component.wysiwyg) { %}

<{{ctx.input.type}}
  ref="{{ctx.input.ref ? ctx.input.ref : 'input'}}"
  class="{{ctx.input.attr.class}} {{ctx.input.type === 'textarea' ? 'navds-textarea__input' : 'navds-text-field__input'}} {{ctx.component.fieldSize ? ctx.component.fieldSize : 'input--xl'}} navds-body-short"
  {% if (ctx.enableAutoComplete === false) { %}
  autocomplete="off"
  {% } %}
  {% for (var attr in ctx.input.attr) { %}
  {{attr}}="{{ctx.input.attr[attr]}}"
  {% } %}
  id="{{ctx.instance.id}}-{{ctx.component.key}}"
  {% if (ctx.component.validate.required) { %}
  required="{{ctx.component.validate.required}}"
  {% } %}
  aria-describedby="{{ ctx.component.description ? `d-${ctx.instance.id}-${ctx.component.key} ` : '' }}e-{{ctx.instance.id}}-{{ctx.component.key}}"
>{{ctx.input.content}}
</{{ctx.input.type}}>
{% } %}
{% if (ctx.component.editor || ctx.component.wysiwyg) { %}
<div ref="input"></div>
{% } %}
{% if (ctx.component.suffix) { %}
<div class="input-group-append navds-body-short" ref="suffix">
  <span class="input-group-text">
    {{ctx.t(ctx.component.suffix)}}
  </span>
</div>
{% } %}

{% if (ctx.component.prefix || ctx.component.suffix) { %}
</div>
{% } %}
