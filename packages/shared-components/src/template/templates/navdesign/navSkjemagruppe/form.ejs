{% if (ctx.component.description && ctx.component.descriptionPosition === "above") { %}
  <div class="skjemagruppe__description" id="{{ctx.id}}-{{ctx.key}}-description">{{ctx.t(ctx.component.description)}}</div>
  {% if (ctx.component.additionalDescription) { %}
    <div class="accordion-link" id="{{ctx.component.id}}-{{ctx.component.key}}-additional-description">
      {% if (ctx.component.additionalDescriptionLabel) { %}
        <a class="accordion-link__link" onclick="{{ctx.utils.toggleClass(`${ctx.component.id}-${ctx.component.key}-additional-description`, 'accordion-link--expand')}}">
          {{ctx.t(ctx.component.additionalDescriptionLabel)}}
        </a>
      {% } %}
      <div class="accordion-link__text">{{ctx.t(ctx.component.additionalDescriptionText)}}</div>
    </div>
  {% } %}
{% } %}
<fieldset
    class="skjemagruppe"
    {% if (ctx.component.description) { %}
    aria-describedby="{{ctx.id}}-{{ctx.key}}-description"
    {% } %}
>
    {% if (ctx.component.legend) { %}
    <legend ref="header" class="skjemagruppe__legend">
        {{ctx.t(ctx.component.legend)}}
    </legend>
    {% } %}
    {% if (ctx.component.description && ctx.component.descriptionPosition !== "above") { %}
        <div class="skjemagruppe__description" id="{{ctx.id}}-{{ctx.key}}-description">{{ctx.t(ctx.component.description)}}</div>
        {% if (ctx.component.additionalDescription) { %}
          <div class="accordion-link" id="{{ctx.component.id}}-{{ctx.component.key}}-additional-description">
            {% if (ctx.component.additionalDescriptionLabel) { %}
              <a class="accordion-link__link" onclick="{{ctx.utils.toggleClass(`${ctx.component.id}-${ctx.component.key}-additional-description`, 'accordion-link--expand')}}">
                {{ctx.t(ctx.component.additionalDescriptionLabel)}}
              </a>
            {% } %}
            <div class="accordion-link__text">{{ctx.t(ctx.component.additionalDescriptionText)}}</div>
          </div>
        {% } %}
    {% } %}
    <div ref="{{ctx.nestedKey}}">
        {{ctx.children}}
    </div>
</fieldset>
