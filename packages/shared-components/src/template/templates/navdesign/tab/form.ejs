<div class="navds-tabs">
  <div class="navds-tabs__tablist-wrapper">
    <div role="tablist" class="navds-tabs__tablist" tabindex="-1">
      {% ctx.component.components.forEach(function(tab, index) { %}
      <button
        class="navds-tabs__tab navds-tabs__tab--medium {{ ctx.currentTab === index ? ' active' : ''}}"
        type="button"
        role="tab"
        ref="{{ctx.tabLinkKey}}"
      >{{ctx.t(tab.label, { _userInput: true })}}{{ctx.currentTab === index ? '1' : '0'}}"</button>
      {% }) %}
    </div>
  </div>
</div>
{% ctx.component.components.forEach(function(tab, index) { %}
<div
  role="tabpanel"
  class="navds-tabs__tabpanel card-body panel panel--border{{ ctx.currentTab === index ? ' active' : ''}}"
  ref="{{ctx.tabKey}}"
>
  {{ctx.tabComponents[index]}}
</div>
{% }) %}