<div class="nav-frontend-tabs">
  <ul class="nav-frontend-tabs__tab-list" role="tablist">
    {% ctx.component.components.forEach(function(tab, index) { %}
    <li class="nav-frontend-tabs__tab-outer" role="presentation" ref="{{ctx.tabLikey}}">
      <a
        class="nav-frontend-tabs__tab-inner{{ ctx.currentTab === index ? ' active' : ''}}"
        href="#{{tab.key}}"
        ref="{{ctx.tabLinkKey}}"
        {% if (ctx.currentTab === index) { %}
        aria-selected="true"
        {% } %}
      >
        {{ctx.t(tab.label)}}
      </a>
    </li>
    {% }) %}
  </ul>
</div>
{% ctx.component.components.forEach(function(tab, index) { %}
<div
  role="tabpanel"
  class="card-body panel panel--border{{ ctx.currentTab === index ? ' active' : ''}}"
  style="display: {{ctx.currentTab === index ? 'block' : 'none'}}"
  ref="{{ctx.tabKey}}"
>
  {{ctx.tabComponents[index]}}
</div>
{% }) %}