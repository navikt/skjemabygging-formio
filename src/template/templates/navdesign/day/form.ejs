<div class="skjemaelement__rad">
  {% if (ctx.dayFirst && ctx.showDay) { %}
  <div>
    {% if (!ctx.component.hideInputLabels) { %}
    <label for="{{ctx.component.key}}-day" class="skjemaelement__label{% if(ctx.component.fields.day.required) { %} field-required{% } %}">{{ctx.t('Dag')}}</label>
    {% } %}
    <div class="{% if (ctx.component.fields.day.fieldSize) { %} {{ctx.component.fields.day.fieldSize}}{% } %}">{{ctx.day}}</div>
  </div>
  {% } %}
  {% if (ctx.showMonth) { %}
  <div>
    {% if (!ctx.component.hideInputLabels) { %}
    <label for="{{ctx.component.key}}-month" class="skjemaelement__label{% if(ctx.component.fields.month.required) { %} field-required{% } %}">{{ctx.t('Måned')}}</label>
    {% } %}
    <div class="{% if (ctx.component.fields.month.fieldSize) { %} {{ctx.component.fields.month.fieldSize}}{% } %}">{{ctx.month}}</div>
  </div>
  {% } %}
  {% if (!ctx.dayFirst && ctx.showDay) { %}
  <div>
    {% if (!ctx.component.hideInputLabels) { %}
    <label for="{{ctx.component.key}}-day" class="skjemaelement__label{% if(ctx.component.fields.day.required) { %} field-required{% } %}">{{ctx.t('Dag')}}</label>
    {% } %}
    <div class="{% if (ctx.component.fields.day.fieldSize) { %} {{ctx.component.fields.day.fieldSize}}{% } %}">{{ctx.day}}</div>
  </div>
  {% } %}
  {% if (ctx.showYear) { %}
  <div>
    {% if (!ctx.component.hideInputLabels) { %}
    <label for="{{ctx.component.key}}-year" class="skjemaelement__label{% if(ctx.component.fields.year.required) { %} field-required{% } %}">{{ctx.t('År')}}</label>
    {% } %}
    <div class="{% if (ctx.component.fields.year.fieldSize) { %} {{ctx.component.fields.year.fieldSize}}{% } %}">{{ctx.year}}</div>
  </div>
  {% } %}
</div>
<input name="ctx.data[day]" type="hidden" class="form-control{% if (ctx.component.fieldSize) { %} {{ctx.component.fieldSize}}{% } %}" lang="en" value="" ref="input">
